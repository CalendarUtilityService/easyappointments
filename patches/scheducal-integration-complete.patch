+
+/**
+ * ScheduCal settings page.
+ *
+ * This module implements the functionality of the ScheduCal settings page.
+ */
+App.Pages.ScheducalSettings = (function () {
+    const $saveSettings = $('#save-settings');
+    const $toggleSecret = $('#toggle-secret');
+    const $apiSecret = $('#scheducal-api-secret');
+
+    /**
+     * Check if the form has invalid values.
+     *
+     * @return {Boolean}
+     */
+    function isInvalid() {
+        try {
+            $('#scheducal-settings .is-invalid').removeClass('is-invalid');
+
+            // Validate required fields.
+
+            let missingRequiredFields = false;
+
+            $('#scheducal-settings .required').each((index, requiredField) => {
+                const $requiredField = $(requiredField);
+
+                if (!$requiredField.val()) {
+                    $requiredField.addClass('is-invalid');
+                    missingRequiredFields = true;
+                }
+            });
+
+            if (missingRequiredFields) {
+                throw new Error(lang('fields_are_required'));
+            }
+
+            return false;
+        } catch (error) {
+            App.Layouts.Backend.displayNotification(error.message);
+            return true;
+        }
+    }
+
+    function deserialize(scheducalSettings) {
+        scheducalSettings.forEach((scheducalSetting) => {
+            const $field = $('[data-field="' + scheducalSetting.name + '"]');
+
+            $field.is(':checkbox')
+                ? $field.prop('checked', Boolean(Number(scheducalSetting.value)))
+                : $field.val(scheducalSetting.value);
+        });
+    }
+
+    function serialize() {
+        const scheducalSettings = [];
+
+        $('[data-field]').each((index, field) => {
+            const $field = $(field);
+
+            scheducalSettings.push({
+                name: $field.data('field'),
+                value: $field.is(':checkbox') ? Number($field.prop('checked')) : $field.val(),
+            });
+        });
+
+        return scheducalSettings;
+    }
+
+    /**
+     * Save the settings.
+     */
+    function onSaveSettingsClick() {
+        if (isInvalid()) {
+            App.Layouts.Backend.displayNotification(lang('settings_are_invalid'));
+
+            return;
+        }
+
+        const scheducalSettings = serialize();
+
+        App.Http.ScheducalSettings.save(scheducalSettings).done(() => {
+            App.Layouts.Backend.displayNotification(lang('settings_saved'));
+        });
+    }
+
+    /**
+     * Toggle API secret visibility.
+     */
+    function onToggleSecretClick() {
+        const type = $apiSecret.attr('type') === 'password' ? 'text' : 'password';
+        $apiSecret.attr('type', type);
+        $toggleSecret.find('i').toggleClass('fa-eye fa-eye-slash');
+    }
+
+    /**
+     * Initialize the module.
+     */
+    function initialize() {
+        $saveSettings.on('click', onSaveSettingsClick);
+        $toggleSecret.on('click', onToggleSecretClick);
+
+        const scheducalSettings = vars('scheducal_settings');
+
+        deserialize(scheducalSettings);
+    }
+
+    document.addEventListener('DOMContentLoaded', initialize);
+
+    return {};
+})();
